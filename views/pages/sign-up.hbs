<div class="row d-flex justify-content-center mt-4">
  <div class="col-sm-5">
    <form action="/sign-up" method="POST">
      <h1 class="h3 fw-normal">Sign Up</h1>

      {{!-- Error message --}}
      <p class="text-end text-danger">{{msg}}</p>

      <input type="hidden" name="_csrf" value="{{csrf}}">

      {{!-- Name input --}}
      {{>input key="name" placeholder="Name"}}

      {{!-- Email input --}}
      {{>input key="email" placeholder="E-mail"}}

      {{!-- Password input --}}
      {{>input type="password" key="password" placeholder="Password"}}

      <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">Sign up</button>

      <div class="my-3 text-center">
        <p class="text-muted">Already have an account? <a href="/sign-in">Log in here</a></p>
      </div>

      <p class="mt-5 my-5 text-muted text-center">&copy; 2017-2022</p>
    </form>
  </div>
</div>