<div class="row d-flex justify-content-center mt-4">
  <div class="col-sm-5">
    <form action="/sign-in" method="POST">
      <h1 class="h3 fw-normal">Sign In</h1>

      {{!-- Error message --}}
      <p class="text-end text-danger">{{msg}}</p>

      <input type="hidden" name="_csrf" value="{{csrf}}">

      {{!-- Email input --}}
      {{>input key="email" placeholder="E-mail"}}

      {{!-- Password input --}}
      {{>input type="password" key="password" placeholder="Password"}}

      <div class="checkbox my-3">
        <label><input type="checkbox" name="rememberMe"> Remember me</label>
      </div>

      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

      <div class="my-3 text-center">
        <p class="text-muted">Don't have an account? <a href="/sign-up">Register here</a></p>
      </div>

      <p class="mt-5 my-5 text-muted text-center">&copy; 2017-2022</p>
    </form>
  </div>
</div>